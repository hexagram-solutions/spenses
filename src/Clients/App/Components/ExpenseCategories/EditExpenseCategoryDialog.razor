@using Spenses.App.Infrastructure
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<EditForm Model="ExpenseCategory"
          OnSubmit="Save">
    <LoadingOverlay Visible="ExpenseCategoriesState.Value.ExpenseCategoryRequesting || ExpenseCategoriesState.Value.ExpenseCategoryUpdating" />
    <MudDialog DefaultFocus="DefaultFocus.FirstChild">
        <TitleContent>
            Edit expense category
        </TitleContent>
        <DialogContent>
            <ExpenseCategoryForm Properties="ExpenseCategory"/>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Warning"
                       Variant="Variant.Filled"
                       OnClick="Close">
                Cancel
            </MudButton>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       StartIcon="@FontIcons.Solid.FilePen"
                       ButtonType="ButtonType.Submit">
                Save expense category
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@using Spenses.App.Infrastructure
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<EditForm Model="Expense"
          OnSubmit="Save">
    <LoadingOverlay Visible="ExpensesState.Value.ExpenseRequesting || ExpensesState.Value.ExpenseUpdating" />
    <MudDialog DefaultFocus="DefaultFocus.FirstChild">
        <TitleContent>
            Edit expense
        </TitleContent>
        <DialogContent>
            <ExpenseForm Expense="Expense"/>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Warning"
                       Variant="Variant.Filled"
                       OnClick="Close">
                Cancel
            </MudButton>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       StartIcon="@FontIcons.Solid.FilePen"
                       ButtonType="ButtonType.Submit">
                Save expense
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

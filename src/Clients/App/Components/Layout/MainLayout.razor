@using Spenses.App.Components.Identity
@using Spenses.App.Infrastructure
@inherits LayoutComponentBase
@layout BaseLayout

<MudLayout>
    <MudMainContent>
        <AuthorizeView Policy="@AuthorizationConstants.RequireVerifiedEmail">
            <Authorized>
                <MudAppBar Elevation="0">
                    Spenses
                    <MudSpacer />
                    <LoginDisplay />
                </MudAppBar>
                <MudDrawer Open Elevation="0">
                    <MudDrawerHeader>
                        <MudText Typo="Typo.h6">Spenses</MudText>
                    </MudDrawerHeader>
                    <NavMenu />
                </MudDrawer>
                <MudMainContent>
                    <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                        @Body
                    </MudContainer>
                </MudMainContent>
            </Authorized>
            <NotAuthorized>
                <RedirectToEmailVerification/>
            </NotAuthorized>
        </AuthorizeView>
    </MudMainContent>
</MudLayout>

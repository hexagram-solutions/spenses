@using Spenses.App.Components.Identity
@using Spenses.App.Infrastructure
@inherits LayoutComponentBase
@layout BaseLayout

<FluentLayout>
    <AuthorizeView Policy="@AuthorizationConstants.RequireVerifiedEmail">
        <Authorized>
            <FluentHeader>
                Spenses
                <FluentSpacer/>
                <div>
                    <LoginDisplay/>
                </div>
            </FluentHeader>
            <FluentStack Class="main"
                         Orientation="Orientation.Horizontal"
                         Width="100%">
                <NavMenu/>
                <FluentBodyContent>
                    <div class="content">
                        @Body
                    </div>
                </FluentBodyContent>
            </FluentStack>
        </Authorized>
        <NotAuthorized>
            <RedirectToEmailVerification/>
        </NotAuthorized>
    </AuthorizeView>

</FluentLayout>

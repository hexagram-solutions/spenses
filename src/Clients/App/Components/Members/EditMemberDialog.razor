@using Spenses.App.Infrastructure
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<EditForm Model="Member"
          OnSubmit="Save">
    <LoadingOverlay Visible="MembersState.Value.MemberRequesting || MembersState.Value.MemberUpdating" />
    <MudDialog DefaultFocus="DefaultFocus.FirstChild">
        <TitleContent>
            Edit member
        </TitleContent>
        <DialogContent>
            <MemberForm Member="Member" MemberId="MemberId"/>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Default"
                       Variant="Variant.Filled"
                       OnClick="Close">
                Close
            </MudButton>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       StartIcon="@FontIcons.Solid.FilePen"
                       ButtonType="ButtonType.Submit">
                Save member
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

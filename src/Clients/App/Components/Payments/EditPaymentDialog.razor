@using Spenses.App.Infrastructure
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<EditForm Model="Payment"
          OnValidSubmit="Save">
    <LoadingOverlay Visible="PaymentsState.Value.PaymentRequesting || PaymentsState.Value.PaymentUpdating" />
    <MudDialog DefaultFocus="DefaultFocus.FirstChild">
        <TitleContent>
            Edit payment
        </TitleContent>
        <DialogContent>
            <PaymentForm Payment="Payment"/>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Warning"
                       Variant="Variant.Filled"
                       OnClick="Close">
                Close
            </MudButton>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       StartIcon="@FontIcons.Solid.FilePen"
                       ButtonType="ButtonType.Submit">
                Save payment
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@page "/homes/{homeId:guid}/settings"
@using Spenses.App.Store.Homes
@using Spenses.App.Components.Homes
@using Spenses.App.Components.Members
@using Spenses.App.Components.ExpenseCategories
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<PageTitle>Settings: @(HomesState.Value.CurrentHome?.Name ?? "Loading...")</PageTitle>

<MudText Typo="Typo.h4"
         GutterBottom>
    @(HomesState.Value.CurrentHome?.Name ?? "Loading...")
</MudText>

<MudGrid>
    <MudItem md="6"
             xs="12">
        <SettingsPanel/>
    </MudItem>
    <MudItem md="6"
             xs="12"
             Style="pa-4">
        <ExpenseCategoriesPanel/>
    </MudItem>
    <MudItem xs="12"
             Style="pa-4">
        <MembersPanel/>
    </MudItem>
</MudGrid>

@code
{
    [Parameter] public Guid HomeId { get; set; }

    [Inject] private IState<HomesState> HomesState { get; set; } = null!;
}

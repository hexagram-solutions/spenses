@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<LoadingIndicator Visible="ExpenseCategoriesState.Value.ExpenseCategoryCreating">
    <ModalHeader>
        <ModalTitle>Add expense category</ModalTitle>
        <CloseButton/>
    </ModalHeader>
    <ModalBody>
        <ExpenseCategoryForm @ref="ExpenseCategoryFormRef"
                             ExpenseCategory="ExpenseCategory"/>
    </ModalBody>
    <ModalFooter>
        <Button Color="Color.Warning"
                Clicked="Close">
            Cancel
        </Button>
        <Button Color="Color.Primary"
                Clicked="Save">
            <Icon Name="IconName.Add"
                  Margin="Margin.Is2.FromEnd"/>
            Add expense category
        </Button>
    </ModalFooter>
</LoadingIndicator>

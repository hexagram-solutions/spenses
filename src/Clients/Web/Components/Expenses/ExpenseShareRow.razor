@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<TableRow>
    <TableRowCell VerticalAlignment="VerticalAlignment.Middle">
        @Model.Member.Name
    </TableRowCell>
    <TableRowCell>
        <Addons>
            <Addon AddonType="AddonType.Start">
                <AddonLabel>$</AddonLabel>
            </Addon>
            <Addon AddonType="AddonType.Body">
                <NumericPicker @bind-Value="Model.OwedAmount"
                               TValue="decimal"
                               Decimals="2"
                               Min="0.00m"/>
            </Addon>
        </Addons>
    </TableRowCell>
    <TableRowCell>
        <Addons>
            <Addon AddonType="AddonType.Start">
                <AddonLabel>%</AddonLabel>
            </Addon>
            <Addon AddonType="AddonType.Body">
                <NumericPicker @bind-Value="Model.OwedPercentage"
                               TValue="decimal"
                               Decimals="2"
                               Min="0.00m"/>
            </Addon>
        </Addons>
    </TableRowCell>
</TableRow>

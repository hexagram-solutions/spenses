@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<TableRow>
    <TableRowCell VerticalAlignment="VerticalAlignment.Middle">
        @Member.Name
    </TableRowCell>
    <TableRowCell>
        <Addons>
            <Addon AddonType="AddonType.Start">
                <AddonLabel>$</AddonLabel>
            </Addon>
            <Addon AddonType="AddonType.Body">
                <NumericPicker @bind-Value="OwedAmount"
                               TValue="decimal"
                               Min="0.00m"
                               Max="Expense.Amount"
                               Disabled="@(Expense.Amount == 0)" />
            </Addon>
        </Addons>
    </TableRowCell>
    <TableRowCell>
        <Addons>
            <Addon AddonType="AddonType.Start">
                <AddonLabel>%</AddonLabel>
            </Addon>
            <Addon AddonType="AddonType.Body">
                <NumericPicker @bind-Value="OwedPercentage"
                               TValue="decimal"
                               Decimals="2"
                               Min="0.00m"
                               Max="100.00m"
                               Step="0.01m"
                               Disabled="@(Expense.Amount == 0)" />
            </Addon>
        </Addons>
    </TableRowCell>
</TableRow>

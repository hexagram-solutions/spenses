@using Spenses.Client.Web.Infrastructure

<Alert Color="Color.Danger"
       Visible="ErrorMessage is not null">
    <AlertMessage>
        <Icon Name="IconName.TimesCircle" />
        @ErrorMessage?.Title
    </AlertMessage>
    <AlertDescription>
        @ErrorMessage?.Details
    </AlertDescription>
</Alert>

@code {

    [Parameter]
    public ErrorMessage? ErrorMessage { get; set; }

}

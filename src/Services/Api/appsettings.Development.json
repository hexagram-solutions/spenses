{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Spenses": {
    "Logging": {
      "LongRunningRequestThreshold": 250
    },
    "SqlServer": {
      "ConnectionString": "Server=.;Database=Spenses;Trusted_Connection=True;Encrypt=False;"
    },
    "Api": {
      "AllowedOrigins": [
        "https://localhost:5001"
      ]
    },
    "Communication": {
      "Email": {
        "FromDisplayName": "Spenses",
        "FromEmailAddress": "noreply@spenses.ca",
        "Smtp": {
          "Host": "localhost",
          "Port": 1025,
          "UseSsl": false
        }
      }
    },
    "Identity": {
      "Email": {
        "WebApplicationBaseUrl": "https://localhost:5001",
        "VerificationPath": "verify-email",
        "PasswordResetPath": "reset-password"
      }
    },
    "Features": {
      "ErrorGeneration": {
        "Frequency": 0.2
      }
    },
    "DataProtection": {
      "ApplicationName": "spenses"
    }
  },
  "FeatureManagement": {
    "ErrorGeneration": false
  }
}

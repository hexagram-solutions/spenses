@page
@model DetailsModel

@{
  ViewData["Title"] = "Home Details";
}

<h1>Details</h1>

<div>
  <h4>Home</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Home.Name)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Home.Name)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Home.Description)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Home.Description)
    </dd>
  </dl>

  <h5>Members</h5>
  <hr/>
  <p>
    <a asp-page="./Members/Add" asp-route-homeId="@Model.Home.Id">Add</a>
  </p>
  <table class="table">
    <thead>
    <tr>
      <th>
        <label asp-for="Home.Members[0].Name" class="is-hidden">Name</label>
      </th>
      <th/>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Home.Members)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
    </tbody>
  </table>

</div>
<div>
  <a asp-page="./Edit" asp-route-id="@Model.Home.Id">Edit</a> |
  <a asp-page="./Index">Back to List</a>
</div>
